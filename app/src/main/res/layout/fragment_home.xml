<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/bgdefault"/>

    <TextView
        android:id="@+id/profileLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:text="Profile"/>

    <ImageView
        android:id="@+id/home_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="70dp"
        android:src="@drawable/profile_default"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgimage"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/dual_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_below="@id/bgimage">

        <TextView
            android:id="@+id/lbl_excursions"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_width="0dip"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#616161"
            android:text="EXCURSIONS"/>

        <TextView
            android:id="@+id/lbl_likes"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#616161"
            android:layout_width="0dip"
            android:gravity="center"
            android:layout_weight="1"
            android:text="PHOTOS"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_below="@id/bgimage">

        <TextView
            android:id="@+id/num_excursions"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_width="0dip"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#616161"
            android:text="0"/>

        <TextView
            android:id="@+id/num_likes"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#00a5f6"
            android:layout_width="0dip"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/blue_bar"/>

    <Button
        android:id="@+id/button_quick_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:textSize="20sp"
        android:textColor="#00a5f6"
        android:layout_margin="13dp"
        android:text="Quick Start"/>

</RelativeLayout>
